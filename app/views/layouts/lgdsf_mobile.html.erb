<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title><%= t("label_title") %></title>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <% if params[:notice] %>
      <div id="flash" style="color: green; border: green solid">
        <%= params[:notice] %>
      </div>
    <% end %>
    <%= yield %>
    <div align="right">
      <%= SETTINGS["version"] %>
    </div>
  </body>
</html>
